generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Game {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  room_code  String @unique
  players    Json @default("{}")
  created_at DateTime  @default(now()) @db.Timestamp()
}